      csvContent += `Generated: ${new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}\n\n`;
      csvContent += `Rank,Department,Predicted Budget (PHP),Percentage,Status\n`;
      
      sortedDepartments.forEach((dept, index) => {
