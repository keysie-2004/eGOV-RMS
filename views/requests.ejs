    <script>
      // Modal control functions for bidding
      async function openBiddingModal(prId) {
        document.getElementById('biddingPrId').value = prId;
        document.getElementById('biddingModal').classList.remove('hidden');
      }

      function closeBiddingModal() {
        document.getElementById('biddingModal').classList.add('hidden');
        document.getElementById('biddingForm').reset();
        document.getElementById('postedAt').value = new Date().toISOString().slice(0, 16);
      }

      async function submitBidding() {
        const form = document.getElementById('biddingForm');
        const formData = new FormData(form);
        const biddingData = {
          pr_id: formData.get('pr_id'),
          posted_by: formData.get('posted_by'),
          posted_at: formData.get('posted_at'),
          deadline: formData.get('deadline'),
          status: formData.get('status')
        };

        if (!biddingData.pr_id) {
          showErrorModal('Purchase Request ID is missing');
          return;
        }
        if (!biddingData.posted_by) {
          showErrorModal('Posted By is missing');
          return;
        }
        if (!biddingData.posted_at) {
          showErrorModal('Posted At date is missing');
          return;
        }
        if (!biddingData.deadline) {
          showErrorModal('Deadline is missing');
          return;
        }
        if (!biddingData.status) {
          showErrorModal('Status is missing');
          return;
        }

        const postedAt = new Date(biddingData.posted_at);
        const deadline = new Date(biddingData.deadline);
        if (deadline <= postedAt) {
          showErrorModal('Deadline must be after Posted At date');
          return;
        }

        try {
          const response = await fetch(`/requests/${biddingData.pr_id}/post`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${getCookie('token')}`
            },
            credentials: 'include',
            body: JSON.stringify(biddingData)
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          showSuccessModal(data.message || 'Request posted for bidding successfully');
          closeBiddingModal();
          setTimeout(() => window.location.reload(), 2000);
        } catch (error) {
          showErrorModal(error.message || 'Failed to post request for bidding');
        }
      }

      function postRequest(prId) {
        if (!confirm('Are you sure you want to post this request for bidding?')) return;
        openBiddingModal(prId);
      }

      async function requestFollowUp(prId) {
        if (!confirm('Are you sure you want to request a follow-up for this document?')) return;
        
        try {
          const response = await fetch(`/notifications/${prId}/follow-up`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${getCookie('token')}`
            },
            credentials: 'include'
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          showSuccessModal(data.message || 'Follow-up request submitted successfully');
          setTimeout(() => window.location.reload(), 2000);
        } catch (error) {
          showErrorModal(error.message || 'Failed to submit follow-up request');
        }
      }

      function showErrorModal(message) {
        document.getElementById('errorMessage').textContent = message;
        document.getElementById('errorModal').classList.remove('hidden');
        autoCloseModal('errorModal');
      }

      function closeErrorModal() {
        document.getElementById('errorModal').classList.add('hidden');
      }

      function showSuccessModal(message) {
        document.getElementById('successMessage').textContent = message;
        document.getElementById('successModal').classList.remove('hidden');
        autoCloseModal('successModal');
      }

      function closeSuccessModal() {
        document.getElementById('successModal').classList.add('hidden');
      }

      function autoCloseModal(modalId, delay = 2000) {
        setTimeout(() => {
          if (modalId === 'errorModal') {
            closeErrorModal();
          } else if (modalId === 'successModal') {
            closeSuccessModal();
          }
        }, delay);
      }

      function showComments(comments, prId) {
        const modal = document.getElementById('commentsModal');
        const content = document.getElementById('commentsContent');
        document.getElementById('commentsPrId').textContent = prId;

        let html = '';
        const documents = ['rfq_form', 'abstract', 'acceptance', 'purchase_order'];
        for (const [statusField, data] of Object.entries(comments)) {
          html += `<div class="mb-4"><h4 class="font-medium text-gray-700">${statusField.replace('_status', '').toUpperCase()}</h4>`;
          for (const [doc, details] of Object.entries(data)) {
            if (details.status) {
              html += `
                <div class="mt-2">
                  <p><strong>Document:</strong> ${doc.replace('_', ' ').toUpperCase()}</p>
                  <p><strong>Status:</strong> ${details.status.charAt(0).toUpperCase() + details.status.slice(1)}</p>
                  <p><strong>Reviewer:</strong> ${details.reviewer}</p>
                  ${details.comment ? `<p><strong>Comment:</strong> ${details.comment}</p>` : ''}
                </div>
              `;
            }
          }
          html += '</div>';
        }
        content.innerHTML = html || '<p>No comments available</p>';
        modal.classList.remove('hidden');
      }

      function closeCommentsModal() {
        document.getElementById('commentsModal').classList.add('hidden');
      }

      document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const error = urlParams.get('error');
        const success = urlParams.get('success');
        
        if (error) {
          showErrorModal(decodeURIComponent(error));
          const cleanUrl = window.location.pathname;
          window.history.replaceState({}, document.title, cleanUrl);
        }
        
        if (success) {
          showSuccessModal(decodeURIComponent(success));
          const cleanUrl = window.location.pathname;
          window.history.replaceState({}, document.title, cleanUrl);
        }
      });

      let currentPrId = null;
      let currentPrTotal = null;

      async function showDeclineModal(pr_id, total) {
        currentPrId = pr_id;
        currentPrTotal = parseFloat(total);
        
        const warningElement = document.getElementById('sppmpWarning');
        if (currentPrTotal > 800000) {
          warningElement.classList.remove('hidden');
        } else {
          warningElement.classList.add('hidden');
        }
        
        document.getElementById('declineModal').classList.remove('hidden');
      }

      function closeDeclineModal() {
        document.getElementById('declineModal').classList.add('hidden');
        currentPrId = null;
        currentPrTotal = null;
      }

      async function confirmDecline() {
        if (!currentPrId) return;
        
        try {
          const response = await fetch(`/update-status/${currentPrId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${getCookie('token')}`
            },
            body: JSON.stringify({ status: 'declined' }),
            credentials: 'include'
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          if (data.message) {
            showSuccessModal(data.message);
            setTimeout(() => window.location.reload(), 2000);
          }
        } catch (error) {
          showErrorModal(error.message || 'Failed to decline request');
        } finally {
          closeDeclineModal();
        }
      }

      async function updateStatus(pr_id, status) {
        if (status === 'declined') {
          try {
            const response = await fetch(`/requests/${pr_id}/details`, {
              headers: {
                'Authorization': `Bearer ${getCookie('token')}`
              },
              credentials: 'include'
            });
            const data = await response.json();
            if (data.total) {
              await showDeclineModal(pr_id, data.total);
            } else {
              await showDeclineModal(pr_id, 0);
            }
          } catch {
            await showDeclineModal(pr_id, 0);
          }
        } else {
          try {
            const response = await fetch(`/update-status/${pr_id}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${getCookie('token')}`
              },
              body: JSON.stringify({ status }),
              credentials: 'include'
            });

            if (!response.ok) {
              const err = await response.json();
              throw err;
            }

            const data = await response.json();
            if (data.message) {
              showSuccessModal(data.message);
              if (status === 'e-sign' && data.qrcode) {
                // Handle QR code update
              }
              setTimeout(() => window.location.reload(), 2000);
            }
          } catch (error) {
            showErrorModal(error.message || 'Failed to update status');
          }
        }
      }

      function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
      }

      async function confirmArchive(pr_id) {
        if (!confirm('Are you sure you want to archive this request?')) return;
        
        try {
          const response = await fetch(`/requests/${pr_id}/archive`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${getCookie('token')}`
            },
            credentials: 'include'
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          if (data.success) {
            showSuccessModal('Request archived successfully');
            setTimeout(() => window.location.reload(), 2000);
          }
        } catch (error) {
          showErrorModal(error.message || 'Failed to archive request');
        }
      }

      async function restoreRequest(pr_id) {
        try {
          const response = await fetch(`/requests/${pr_id}/restore`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${getCookie('token')}`
            },
            credentials: 'include'
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          if (data.success) {
            showSuccessModal('Request restored successfully');
            setTimeout(() => window.location.reload(), 2000);
          }
        } catch (error) {
          showErrorModal(error.message || 'Failed to restore request');
        }
      }

      async function openModal(requestData) {
        if (typeof requestData === 'string') {
          requestData = JSON.parse(requestData);
        }

        Object.keys(requestData).forEach(field => {
          const input = document.getElementById('edit' + field.charAt(0).toUpperCase() + field.slice(1));
          if (input) {
            input.value = requestData[field];
          }
        });

        document.getElementById('editModal').classList.remove('hidden');
      }

      function closeModal() {
        document.getElementById('editModal').classList.add('hidden');
      }

      async function updateRequest() {
        let requestData = {};
        document.querySelectorAll('#editForm input').forEach(input => {
          requestData[input.id.replace('edit', '').toLowerCase()] = input.value;
        });

        try {
          const response = await fetch('/update-request', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(requestData)
          });

          if (!response.ok) {
            const err = await response.json();
            throw err;
          }

          const data = await response.json();
          showSuccessModal('Request updated successfully');
          setTimeout(() => location.reload(), 1000);
        } catch (error) {
          showErrorModal(error.message || 'Failed to update request');
        }
      }

      function generateQRCode(pr_id) {
        const qrCodeElement = document.getElementById(`qrCode-${pr_id}`);
        if (!qrCodeElement) return;

        qrCodeElement.innerHTML = '';

        const container = document.querySelector(`[data-pr-id="${pr_id}"]`);
        const storedQrCode = container ? container.dataset.qrCode : null;

        if (storedQrCode) {
          qrCodeElement.innerHTML = `<img src="${storedQrCode}" alt="QR Code" style="width: 200px; height: 200px;">`;
        } else {
          const signUrl = `${window.location.origin}/sign-request/${pr_id}`;
          try {
            new QRCode(qrCodeElement, {
              text: signUrl,
              width: 200,
              height: 200,
              colorDark: '#000000',
              colorLight: '#ffffff',
              correctLevel: QRCode.CorrectLevel.H
            });
          } catch (error) {
            console.error('QR code generation error:', error);
            qrCodeElement.innerHTML = '<p class="text-red-500">Error generating QR code</p>';
          }
        }
      }

      function toggleQRCode(pr_id) {
        const container = document.getElementById(`qrCodeContainer-${pr_id}`);
        const toggleText = document.getElementById(`qrCodeToggleText-${pr_id}`);

        if (!container || !toggleText) return;

        if (container.classList.contains('hidden')) {
          container.classList.remove('hidden');
          toggleText.textContent = 'Hide QR Code';
          generateQRCode(pr_id);
        } else {
          container.classList.add('hidden');
          toggleText.textContent = 'Show QR Code';
        }
      }

      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('[data-pr-id][data-qr-code]').forEach(container => {
          const pr_id = container.dataset.prId;
          generateQRCode(pr_id);
        });
      });
    </script>
