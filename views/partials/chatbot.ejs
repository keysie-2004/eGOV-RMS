                type="text" 
                id="chatInput" 
                placeholder="Ask about inventory, requests, or reports..." 
                class="w-full border border-gray-300 rounded-full pl-4 pr-12 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                autocomplete="off"
            >
            <button 
                id="sendMessage" 
                class="absolute right-3 bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                disabled
            >
                <i class="fas fa-paper-plane"></i>
