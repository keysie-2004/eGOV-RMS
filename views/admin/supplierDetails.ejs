<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= supplier.company_name %> - Supplier Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Include Admin Sidebar -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="md:ml-64 p-4 md:p-8">
        <div class="w-full">
            <!-- Breadcrumb -->
            <nav class="flex mb-6" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/admin/dashboard" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                            <i class="fas fa-home mr-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400"></i>
                            <a href="/admin/suppliers" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Suppliers</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400"></i>
                            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= supplier.company_name %></span>
                        </div>
                    </li>
                </ol>
            </nav>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left Column -->
                <div class="lg:col-span-1 space-y-6">
                    <!-- Profile Card -->
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-lg font-semibold text-gray-800">Supplier Profile</h2>
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                <%= supplier.is_banned ? 'bg-red-100 text-red-800' : 
                                   supplier.is_approved ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                <%= supplier.is_banned ? 'Banned' : 
                                   supplier.is_approved ? 'Approved' : 'Pending' %>
                            </span>
                        </div>

                        <div class="flex flex-col items-center text-center mb-6">
                            <% if (supplier.profile_image) { %>
                                <img src="<%= supplier.profile_image %>" alt="Supplier Logo" class="w-32 h-32 rounded-full object-cover border-4 border-blue-100 mb-4">
                            <% } else { %>
                                <div class="w-32 h-32 rounded-full bg-blue-100 flex items-center justify-center mb-4">
                                    <i class="fas fa-building text-4xl text-blue-500"></i>
                                </div>
                            <% } %>

                            <h3 class="text-xl font-bold text-gray-800"><%= supplier.company_name %></h3>
                            <p class="text-gray-600"><%= supplier.contact_person || 'No contact person' %></p>
                        </div>

                        <div class="space-y-3">
                            <div class="flex items-center">
                                <i class="fas fa-envelope text-gray-400 w-6"></i>
                                <span class="text-gray-700"><%= supplier.email %></span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-phone text-gray-400 w-6"></i>
                                <span class="text-gray-700"><%= supplier.phone || 'Not provided' %></span>
                            </div>
                            <div class="flex items-start">
                                <i class="fas fa-map-marker-alt text-gray-400 w-6 mt-1"></i>
                                <span class="text-gray-700"><%= supplier.address || 'Not provided' %></span>
                            </div>
                        </div>

                        <div class="mt-6 pt-4 border-t border-gray-200">
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-sm font-medium text-gray-500">Rating</span>
                                <span class="text-sm font-semibold">
                                    <%= averageRating %> <i class="fas fa-star text-yellow-400"></i>
                                    <span class="text-gray-400">(<%= ratingCount %> reviews)</span>
                                </span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2.5">
                                <div class="bg-yellow-400 h-2.5 rounded-full" style="width: <%= (averageRating / 5) * 100 %>%"></div>
                            </div>
                        </div>

                        <div class="mt-6 flex flex-wrap gap-2">
                            <% if (supplier.is_banned) { %>
                                <button class="unban-supplier flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" data-id="<%= supplier.supplier_id %>">
                                    <i class="fas fa-undo mr-2"></i> Unban
                                </button>
                            <% } else if (!supplier.is_approved) { %>
                                <button class="approve-supplier flex-1 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded" data-id="<%= supplier.supplier_id %>">
                                    <i class="fas fa-check mr-2"></i> Approve
                                </button>
                                <button class="ban-supplier flex-1 bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded" data-id="<%= supplier.supplier_id %>">
                                    <i class="fas fa-ban mr-2"></i> Reject
                                </button>
                            <% } else { %>
                                <button class="ban-supplier flex-1 bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded" data-id="<%= supplier.supplier_id %>">
                                    <i class="fas fa-ban mr-2"></i> Ban
                                </button>
                            <% } %>
                        </div>
                    </div>

                    <!-- Documents Card -->
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <h2 class="text-lg font-semibold text-gray-800 mb-4">Business Documents</h2>
                        
                        <% if (supplier.tax_id) { %>
                            <div class="mb-4">
                                <p class="text-sm font-medium text-gray-500 mb-1">Tax Identification Number</p>
                                <p class="text-gray-700 mb-2"><%= supplier.tax_id %></p>
                                <a href="<%= supplier.tax_id %>" target="_blank" class="inline-flex items-center text-blue-600 hover:text-blue-800">
                                    <i class="fas fa-eye mr-1"></i> View Document
                                </a>
                            </div>
                        <% } %>
                        
                        <% if (supplier.business_permit) { %>
                            <div>
                                <p class="text-sm font-medium text-gray-500 mb-1">Business Permit</p>
                                <a href="<%= supplier.business_permit %>" target="_blank" class="inline-flex items-center text-blue-600 hover:text-blue-800">
                                    <i class="fas fa-eye mr-1"></i> View Document
                                </a>
                            </div>
                        <% } %>
                        
                        <% if (!supplier.tax_id && !supplier.business_permit) { %>
                            <p class="text-gray-500 italic">No documents uploaded</p>
                        <% } %>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Recent Bids Card -->
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-lg font-semibold text-gray-800">Recent Bids</h2>
                            <a href="/admin/suppliers/<%= supplier.supplier_id %>/history" class="text-sm text-blue-600 hover:text-blue-800">
                                View All <i class="fas fa-arrow-right ml-1"></i>
                            </a>
                        </div>

                        <% if (bids.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bid ID</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PR #</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% bids.forEach(bid => { %>
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-blue-600">
                                                    <a href="/admin/bids/<%= bid.bid_id %>/details"><%= bid.bid_id %></a>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500"><%= bid.pr_id %></td>
                                                <td class="px-4 py-3 text-sm text-gray-500"><%= bid.purpose %></td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                                    â‚±<%= parseFloat(bid.total_amount).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                        <%= bid.status === 'approved' ? 'bg-green-100 text-green-800' : 
                                                           bid.status === 'declined' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                        <%= bid.status.charAt(0).toUpperCase() + bid.status.slice(1) %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-8">
                                <i class="fas fa-inbox text-3xl text-gray-300 mb-2"></i>
                                <p class="text-gray-500">No bids submitted yet</p>
                            </div>
                        <% } %>
                    </div>

                    <!-- Recent Ratings Card -->
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Ratings</h2>

                        <% if (ratings.length > 0) { %>
                            <div class="space-y-4">
                                <% ratings.forEach(rating => { %>
                                    <div class="border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                                        <div class="flex justify-between items-start mb-1">
                                            <div>
                                                <h4 class="font-medium text-gray-800">
                                                    <%= rating.rater_name || 'Unknown Rater' %>
                                                    <% if (rating.pr_purpose) { %>
                                                        <span class="text-sm text-gray-500 ml-2">for <%= rating.pr_purpose %></span>
                                                    <% } %>
                                                </h4>
                                                <div class="flex items-center text-yellow-400 mb-1">
                                                    <% for (let i = 0; i < 5; i++) { %>
                                                        <i class="fas fa-star<%= i >= rating.rating ? '-empty' : '' %>"></i>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <span class="text-sm text-gray-500"><%= rating.rated_at %></span>
                                        </div>
                                        <% if (rating.comments) { %>
                                            <p class="text-gray-700"><%= rating.comments %></p>
                                        <% } %>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-8">
                                <i class="fas fa-star text-3xl text-gray-300 mb-2"></i>
                                <p class="text-gray-500">No ratings received yet</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    $(document).ready(function() {
        // Handle status change buttons
        $('.approve-supplier, .ban-supplier, .unban-supplier').click(function() {
            const supplierId = $(this).data('id');
            const action = $(this).hasClass('approve-supplier') ? 'approve' : 
                          ($(this).hasClass('unban-supplier') ? 'unban' : 'ban');
            
            const actionText = $(this).hasClass('approve-supplier') ? 'approve' : 
                              ($(this).hasClass('unban-supplier') ? 'unban' : 'ban';
            
            Swal.fire({
                title: `Confirm ${actionText.charAt(0).toUpperCase() + actionText.slice(1)}`,
                text: `Are you sure you want to ${actionText} this supplier?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: `Yes, ${actionText}`
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/admin/suppliers/${supplierId}/status`,
                        method: 'POST',
                        data: { action: action },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Success',
                                    text: response.message,
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message
                                });
                            }
                        },
                        error: function(xhr) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: xhr.responseJSON?.message || 'Error updating supplier status'
                            });
                        }
                    });
                }
            });
        });
    });
    </script>
</body>
</html>