    // FIXED: AI Recommendations function to properly handle HTML content
    async function getAIRecommendations() {
      const department = '<%= selectedDepartment %>';
      if (!department || department === 'all') {
        showToast('Please select a specific department first', 'warning');
        return;
      }
      
      const btn = document.getElementById('getAIRecommendations');
      const originalContent = btn.innerHTML;
      const contentDiv = document.getElementById('aiRecommendationsContent');
      const spinner = document.getElementById('aiLoadingSpinner');
      
      btn.innerHTML = '<i class="fas fa-circle-notch fa-spin mr-1"></i>';
      btn.disabled = true;
      spinner.style.display = 'block';
      contentDiv.innerHTML = '<div class="text-center py-4"><p class="text-gray-500 text-sm">Generating AI recommendations...</p></div>';
      
      try {
        const response = await fetch(`/predictive/ai-recommendations?department=${encodeURIComponent(department)}`);
        const result = await response.json();
        
        if (result.success) {
          // Directly set the HTML content (it's already formatted from backend)
          contentDiv.innerHTML = `
            <div class="space-y-4">
              ${result.recommendations}
              <div class="text-xs text-gray-500 text-right mt-4 pt-3 border-t border-gray-200">
                <i class=" mr-1"></i>
                AI-generated at ${result.metadata?.generatedAt ? new Date(result.metadata.generatedAt).toLocaleTimeString() : 'just now'}
                ${result.metadata?.inflationRate ? `<span class="ml-3"><i class="fas fa-chart-line mr-1"></i>Inflation: ${result.metadata.inflationRate}</span>` : ''}
              </div>
            </div>
          `;
          showToast('AI recommendations generated successfully!', 'success');
        } else {
          contentDiv.innerHTML = `
            <div class="text-center py-4">
              <div class="text-red-500 text-sm mb-2">Failed to generate recommendations</div>
              <p class="text-gray-500 text-sm">${result.error || 'Please try again'}</p>
            </div>
          `;
          showToast('Failed to generate AI recommendations', 'error');
        }
      } catch (error) {
        console.error('Error getting AI recommendations:', error);
        contentDiv.innerHTML = `
          <div class="text-center py-4">
            <div class="text-red-500 text-sm mb-2">Connection Error</div>
            <p class="text-gray-500 text-sm">Unable to connect to AI service</p>
          </div>
        `;
        showToast('AI service unavailable', 'warning');
      } finally {
        btn.innerHTML = originalContent;
        btn.disabled = false;
        spinner.style.display = 'none';
      }
    }

    function closeModal() {
      const modal = document.getElementById('departmentModal');
      modal.style.display = 'none';
    }

    function toggleDetailedAnalysis() {
      const section = document.getElementById('detailedAnalysisSection');
      section.style.display = 'none';
    }

    function showToast(message, type = 'info') {
      const colors = {
        info: 'bg-blue-500',
        success: 'bg-green-500',
        error: 'bg-red-500',
        warning: 'bg-yellow-500'
      };
      
      const icons = {
        info: 'fa-info-circle',
        success: 'fa-check-circle',
        error: 'fa-exclamation-circle',
        warning: 'fa-exclamation-triangle'
      };
      
      const toast = document.createElement('div');
      toast.className = `${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center transform translate-y-2 opacity-0 transition-all duration-300`;
      toast.innerHTML = `
        <i class="fas ${icons[type]} mr-3"></i>
        <span>${message}</span>
      `;
      
      const container = document.getElementById('toastContainer');
      container.appendChild(toast);
      
      setTimeout(() => {
        toast.classList.remove('translate-y-2', 'opacity-0');
        toast.classList.add('translate-y-0', 'opacity-100');
      }, 10);
      
      setTimeout(() => {
        toast.classList.remove('translate-y-0', 'opacity-100');
        toast.classList.add('translate-y-2', 'opacity-0');
        setTimeout(() => toast.remove(), 300);
      }, 4000);
    }

    // Utility function for chart rendering in detailed analysis
    function renderMonthlyChart(monthlyData) {
      const ctx = document.getElementById('monthlyPatternChart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
          datasets: [{
            label: 'Average Spending',
            data: monthlyData,
            backgroundColor: 'rgba(59, 130, 246, 0.5)',
            borderColor: '#3b82f6',
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Amount (₱)'
              }
            }
          }
        }
      });
    }

    function renderYearlyChart(yearlyData) {
      const ctx = document.getElementById('yearlyTrendChart').getContext('2d');
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: yearlyData.labels,
          datasets: [{
            label: 'Yearly Spending',
            data: yearlyData.values,
            borderColor: '#10b981',
            backgroundColor: 'rgba(16, 185, 129, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Amount (₱)'
              }
            }
          }
        }
      });
    }
