  <!-- Toast Container -->
  <div id="toastContainer" class="fixed bottom-4 right-4 z-50 space-y-2"></div>

  <script>
    // Chart instances
    let budgetChart = null;
    let trendChart = null;
    let currentChartType = 'bar';

    document.addEventListener('DOMContentLoaded', function() {
      // Initialize charts if data exists
      if (<%= sortedDepartments && sortedDepartments.length > 0 %>) {
        initializeCharts();
      }

      // Department selector change
      document.getElementById('departmentSelect').addEventListener('change', function() {
        const department = this.value;
        window.location.href = `/predictive/department?department=${encodeURIComponent(department)}`;
      });

      // Refresh button
      document.getElementById('refreshBtn').addEventListener('click', async function() {
        const btn = this;
        const originalHTML = btn.innerHTML;
        
        btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i>';
        btn.disabled = true;
        
        showToast('Refreshing prediction data...', 'info');
        
        setTimeout(() => {
          window.location.reload();
        }, 1000);
      });

      // Export button
      document.getElementById('exportBtn').addEventListener('click', async function() {
        await exportReport();
      });

      // Visualize button
      document.getElementById('visualizeBtn').addEventListener('click', function() {
        const section = document.getElementById('visualizationSection');
        if (section.style.display === 'none') {
          section.style.display = 'block';
          if (!budgetChart) {
            initializeCharts();
          }
          showToast('Visualization loaded successfully', 'success');
          this.innerHTML = '<i class="fas fa-eye-slash"></i> Hide Visualization';
        } else {
          section.style.display = 'none';
          this.innerHTML = '<i class="fas fa-chart-bar"></i> Visualize';
        }
      });

      // Detailed Analysis button - FIXED to use the correct endpoint
      document.getElementById('detailedAnalysisBtn').addEventListener('click', function() {
        const section = document.getElementById('detailedAnalysisSection');
        const selectedDepartment = document.getElementById('departmentSelect').value;
        
        if (section.style.display === 'none') {
          section.style.display = 'block';
          loadDetailedAnalysis(selectedDepartment);
          showToast('Loading detailed analysis...', 'info');
        } else {
          section.style.display = 'none';
        }
      });

      // AI Recommendations button
      const aiRecommendationsBtn = document.getElementById('getAIRecommendations');
      if (aiRecommendationsBtn) {
        aiRecommendationsBtn.addEventListener('click', async function() {
          await getAIRecommendations();
        });
      }
    });

    function initializeCharts() {
      // Destroy existing charts
      if (budgetChart) {
        budgetChart.destroy();
      }
      if (trendChart) {
        trendChart.destroy();
      }

      // Get data from table
      const tableRows = document.querySelectorAll('tbody tr');
      const departments = [];
      const amounts = [];
      const percentages = [];
      const confidences = [];

      tableRows.forEach(row => {
        const cells = row.querySelectorAll('td');
        if (cells.length >= 5) {
          const deptElement = cells[0];
          const deptName = deptElement.querySelector('.font-semibold').textContent.trim();
          const amountText = cells[1].querySelector('.text-lg').textContent.trim();
          const percentageText = cells[2].querySelector('.chip').textContent.trim();
          const confidenceElement = cells[3].querySelector('.font-medium');
          const confidenceText = confidenceElement ? confidenceElement.textContent.trim() : '0%';
          
          const amount = parseFloat(amountText.replace(/[^\d.-]/g, ''));
          const percentage = parseFloat(percentageText.replace('%', ''));
          const confidence = parseFloat(confidenceText.replace('%', ''));
          
          if (!isNaN(amount) && !isNaN(percentage)) {
            departments.push(deptName.length > 15 ? deptName.substring(0, 12) + '...' : deptName);
            amounts.push(amount);
            percentages.push(percentage);
            confidences.push(confidence);
          }
        }
      });

      // Budget Distribution Chart
      const budgetCtx = document.getElementById('budgetChart').getContext('2d');
      budgetChart = new Chart(budgetCtx, {
        type: currentChartType,
        data: {
          labels: departments,
          datasets: [{
            label: 'Predicted Budget (₱)',
            data: amounts,
            backgroundColor: generateColors(departments.length),
            borderColor: '#3b82f6',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'top',
            },
            tooltip: {
              callbacks: {
                label: function(context) {
                  const index = context.dataIndex;
                  return `₱${context.raw.toLocaleString('en-US', { 
                    minimumFractionDigits: 2, 
                    maximumFractionDigits: 2 
                  })} (${percentages[index]}%)`;
                }
              }
            }
          }
        }
      });

      // Trend Chart
      const trendCtx = document.getElementById('trendChart').getContext('2d');
      trendChart = new Chart(trendCtx, {
        type: 'line',
        data: {
          labels: departments,
          datasets: [{
            label: 'Budget Percentage',
            data: percentages,
            borderColor: '#10b981',
            backgroundColor: 'rgba(16, 185, 129, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'top',
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Percentage of Total Budget'
              }
            }
          }
        }
      });
    }

    function changeChartType(type) {
      currentChartType = type;
      if (budgetChart) {
        budgetChart.config.type = type;
        budgetChart.update();
      }
    }

    function generateColors(count) {
      const colors = [];
      const baseColors = [
        '#3b82f6', '#10b981', '#8b5cf6', '#f59e0b', '#ef4444',
        '#06b6d4', '#84cc16', '#f97316', '#6366f1', '#ec4899'
      ];
      
      for (let i = 0; i < count; i++) {
        colors.push(baseColors[i % baseColors.length]);
      }
      
      return colors;
    }

    async function exportReport() {
      const btn = document.getElementById('exportBtn');
      const originalContent = btn.innerHTML;
      
      btn.innerHTML = '<i class="fas fa-circle-notch fa-spin mr-2"></i> Exporting...';
      btn.disabled = true;
      
      try {
        showToast('Preparing export...', 'info');
        
        await new Promise(resolve => setTimeout(resolve, 500));
        
        const currentDate = new Date();
        const fiscalYear = currentDate.getFullYear() + 1;
        const timestamp = currentDate.toISOString().replace(/[:.]/g, '-');
        
        const data = [
          ['Department Budget Predictions Report'],
          ['Generated on:', currentDate.toLocaleDateString()],
          ['Generated at:', currentDate.toLocaleTimeString()],
          ['Fiscal Year:', fiscalYear],
          ['Prediction Model:', 'ARIMA + Linear Regression with AI inflation'],
          ['AI Inflation Rate:', '<%= currentInflationRate %>%'],
          ['Total Predicted Budget:', document.querySelector('.text-3xl.font-bold.text-blue-700').textContent.trim()],
          ['Average Confidence Score:', '<%= departmentData && departmentData.length > 0 ? Math.round(departmentData.reduce((sum, dept) => sum + (dept.confidence || 0), 0) / departmentData.length) : 0 %>%'],
          [],
          ['Rank', 'Department', 'Department Code', 'Predicted Amount', 'Percentage', 'Confidence', 'Share of Total']
        ];
        
        const tableRows = document.querySelectorAll('tbody tr');
        let rank = 1;
        
        tableRows.forEach(row => {
          const cells = row.querySelectorAll('td');
          if (cells.length >= 5) {
            const deptElement = cells[0];
            const deptName = deptElement.querySelector('.font-semibold').textContent.trim();
            const deptCode = deptElement.querySelector('.text-sm').textContent.trim();
            const amount = cells[1].querySelector('.text-lg').textContent.trim();
            const percentage = cells[2].querySelector('.chip').textContent.replace('%', '').trim();
            const confidenceElement = cells[3].querySelector('.font-medium');
            const confidence = confidenceElement ? confidenceElement.textContent.replace('%', '').trim() : '0';
            const share = (parseFloat(percentage) / 100).toFixed(3);
            
            data.push([
              rank,
              deptName,
              deptCode,
              amount,
              `${percentage}%`,
              `${confidence}%`,
              share
            ]);
            rank++;
          }
        });
        
        const ws = XLSX.utils.aoa_to_sheet(data);
        const wb = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(wb, ws, "Budget Predictions");
        
        // Apply styling through column widths
        ws['!cols'] = [
          {wch: 6},   // Rank
          {wch: 30},  // Department
          {wch: 15},  // Code
          {wch: 20},  // Amount
          {wch: 12},  // Percentage
          {wch: 12},  // Confidence
          {wch: 12}   // Share
        ];
        
        // Merge title cells
        if (!ws['!merges']) ws['!merges'] = [];
        ws['!merges'].push(
          {s: {r: 0, c: 0}, e: {r: 0, c: 6}},
          {s: {r: 1, c: 1}, e: {r: 1, c: 2}},
          {s: {r: 2, c: 1}, e: {r: 2, c: 2}}
        );
        
        const fileName = `Budget_Predictions_FY${fiscalYear}_${timestamp}.xlsx`;
        XLSX.writeFile(wb, fileName);
        
        showToast('Report exported successfully!', 'success');
      } catch (error) {
        console.error('Export failed:', error);
        showToast('Export failed. Please try again.', 'error');
      } finally {
        btn.innerHTML = originalContent;
        btn.disabled = false;
      }
    }

