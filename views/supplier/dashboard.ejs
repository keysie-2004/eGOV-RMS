<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>Supplier Dashboard - Hareneth</title>
  <link href="/src/supplier.css" rel="stylesheet"/>
<link rel="stylesheet" href="/fa/css/all.min.css">
  <link rel="icon" href="/img/Calapan_City_Logo.png" type="image/png"/>
  <style>
    .grid-info-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    .item-grid {
      display:  
 grid;
      grid-template-columns: 50px 80px minmax(200px, 1fr) 80px 100px 120px;
      gap: 0.5rem;
    }
    @media (max-width: 768px) {
      .item-grid {
        grid-template-columns: 40px 60px minmax(150px, 1fr) 60px 80px 100px;
      }
    }
  </style>
</head>

<body class="bg-blue-50 font-sans">
  <!-- Include Sidebar -->
  <%- include('../partials/supplierSidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 p-4 lg:p-8">
    <div class="w-full">
      <div class="bg-white p-6 lg:p-8 rounded-lg shadow-sm">
        <!-- Page Title -->
        <h1 class="text-2xl font-bold text-blue-700 mb-6">Supplier Dashboard</h1>

        <!-- Stats Section -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-blue-100 p-4 rounded-lg text-center">
            <h3 class="text-lg font-semibold">Active Bids</h3>
            <p class="text-2xl font-bold"><%= stats.activeBids || 0 %></p>
          </div>
          <div class="bg-green-100 p-4 rounded-lg text-center">
            <h3 class="text-lg font-semibold">Won Bids</h3>
            <p class="text-2xl font-bold"><%= stats.wonBids || 0 %></p>
          </div>
          <div class="bg-yellow-100 p-4 rounded-lg text-center">
            <h3 class="text-lg font-semibold">Open Biddings</h3>
            <p class="text-2xl font-bold"><%= stats.openBiddings || 0 %></p>
          </div>
          <div class="bg-purple-100 p-4 rounded-lg text-center">
            <h3 class="text-lg font-semibold">Total Sales</h3>
            <p class="text-2xl font-bold">₱<%= parseFloat(stats.totalSales || 0).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
          </div>
        </div>

        <!-- Open Biddings Section -->
        <div class="mb-6">
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Open Biddings</h2>
          <% if (postedRequests && postedRequests.length > 0) { %>
            <div class="space-y-6">
              <% postedRequests.forEach(function(request) { %>
                <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                  <!-- Request Header -->
                  <div class="bg-blue-50 border-l-4 border-blue-500 px-4 py-3 mb-4 -ml-6 -mt-6 rounded-t-lg flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2">
                    <h3 class="text-lg font-bold text-blue-700">
                      PR ID: <%= request.pr_id %>
                    </h3>
                    <span class="px-3 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800">
                      <%= request.status %>
                    </span>
                  </div>

                  <!-- Main Request Info -->
                  <div class="grid-info-row gap-4 mb-6">
                    <div class="space-y-2">
                      <div>
                        <p class="text-sm font-medium text-gray-500">LGU</p>
                        <p class="font-medium"><%= request.lgu %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Department</p>
                        <p class="font-medium"><%= request.department %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Date Requested</p>
                        <p class="font-medium"><%= new Date(request.date_requested).toLocaleDateString() %></p>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <div>
                        <p class="text-sm font-medium text-gray-500">Total Amount</p>
                        <p class="font-medium text-lg">₱<%= parseFloat(request.total).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Purpose</p>
                        <p class="font-medium"><%= request.purpose %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Requested By</p>
                        <p class="font-medium"><%= request.requested_by %></p>
                      </div>
                    </div>
                  </div>

                  <!-- Items Section -->
                  <div class="mb-6">
                    <h4 class="font-medium text-gray-700 mb-3">Items</h4>
                    <div class="overflow-x-auto">
                      <div class="min-w-[600px]">
                        <!-- Items Header -->
                        <div class="item-grid bg-gray-100 p-3 rounded-t">
                          <div class="text-sm font-medium">Item No</div>
                          <div class="text-sm font-medium">Unit</div>
                          <div class="text-sm font-medium">Description</div>
                          <div class="text-sm font-medium">Qty</div>
                          <div class="text-sm font-medium">Unit Cost</div>
                          <div class="text-sm font-medium">Total Cost</div>
                        </div>
                        <!-- Items List -->
                        <% request.items.forEach(function(item) { %>
                          <div class="item-grid p-3 border-b border-gray-100">
                            <div class="text-sm"><%= item.item_no %></div>
                            <div class="text-sm"><%= item.unit %></div>
                            <div class="text-sm"><%= item.item_description %></div>
                            <div class="text-sm"><%= item.quantity %></div>
                            <div class="text-sm">₱<%= parseFloat(item.unit_cost).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                            <div class="text-sm">₱<%= parseFloat(item.total_cost).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                          </div>
                        <% }); %>
                      </div>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
<!-- Change the button to pass bidding_id instead of pr_id -->
<button type="button" 
        onclick='openBidForm("<%= request.bidding_id %>", <%= JSON.stringify(request.items) %>)' 
        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
  <i class="fas fa-gavel mr-2"></i>Submit Bid
</button>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center py-12">
              <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-500 text-lg">No open biddings available</p>
            </div>
          <% } %>
        </div>

        <!-- Recent Bids Section -->
        <div>
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Recent Bids</h2>
          <% if (recentBids && recentBids.length > 0) { %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bid ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PR ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% recentBids.forEach(function(bid) { %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= bid.bid_id %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= bid.pr_id %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= bid.purpose %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        ₱<%= parseFloat(bid.total_amount).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs rounded-full 
                          <%= bid.status === 'approved' ? 'bg-green-100 text-green-800' : 
                              bid.status === 'declined' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                          <%= bid.status %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= new Date(bid.submitted_at).toLocaleDateString() %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-12">
              <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-500 text-lg">No recent bids available</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bid Submission Modal -->
  <div id="bidModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-4xl shadow-lg rounded-md bg-white">
      <div class="mt-3">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium text-gray-900">Submit Bid for PR ID: <span id="prId"></span></h3>
          <button onclick="closeBidModal()" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
          </button>
        </div>
        
        <form id="bidForm" class="space-y-4">
          <input type="hidden" name="bidding_id" id="biddingId">
          
          <!-- Items Section -->
          <div class="mb-6">
            <h4 class="font-medium text-gray-700 mb-3">Items</h4>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item No</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Est. Unit Cost</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Your Unit Price</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                  </tr>
                </thead>
                <tbody id="bidItems" class="bg-white divide-y divide-gray-200">
                  <!-- Items will be inserted here -->
                </tbody>
              </table>
            </div>
          </div>
          
          <!-- Notes Section -->
          <div>
            <label for="notes" class="block text-sm font-medium text-gray-700">Notes (Optional)</label>
            <textarea id="notes" name="notes" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
          </div>
          
          <!-- Total Amount -->
          <div class="flex justify-end">
            <div class="text-right">
              <p class="text-sm font-medium text-gray-500">Total Bid Amount</p>
              <p id="totalAmount" class="text-2xl font-bold">₱0.00</p>
              <input type="hidden" name="total_amount" id="totalAmountInput" value="0">
            </div>
          </div>
          
          <!-- Actions -->
          <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
            <button type="button" onclick="closeBidModal()" class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600">
              Cancel
            </button>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
              Submit Bid
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <i class="fas fa-check-circle text-green-600 text-xl"></i>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Success</h3>
        <div class="mt-2 px-4 py-3">
          <p id="successMessage" class="text-sm text-gray-500"></p>
        </div>
        <div class="items-center px-4 py-3">
          <button onclick="closeSuccessModal()" class="px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div id="errorModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
          <i class="fas fa-exclamation-circle text-red-600 text-xl"></i>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Error</h3>
        <div class="mt-2 px-4 py-3">
          <p id="errorMessage" class="text-sm text-gray-500"></p>
        </div>
        <div class="items-center px-4 py-3">
          <button onclick="closeErrorModal()" class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    function openBidForm(prId, itemsData) {
      try {
        console.log('Opening bid form for PR:', prId);
        console.log('Items data:', itemsData);
        
        // Process items to ensure item_id exists
        const items = itemsData.map(function(item) {
          return {
            ...item,
            item_id: item.item_id || item.item_no
          };
        });
        
        const bidItemsTbody = document.getElementById('bidItems');
        const prIdSpan = document.getElementById('prId');
        prIdSpan.textContent = prId;
        bidItemsTbody.innerHTML = '';

        // Use simple PR ID as the bidding_id
        document.getElementById('biddingId').value = prId;

        items.forEach(function(item, index) {
          const row = document.createElement('tr');
          row.className = 'hover:bg-gray-50';
          
          const itemId = item.item_id || item.item_no || index;
          const itemNo = item.item_no || '';
          const itemDescription = item.item_description || '';
          const unit = item.unit || '';
          const quantity = item.quantity || 0;
          const unitCost = parseFloat(item.unit_cost) || 0;
          
          row.innerHTML = 
            '<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">' +
              itemNo +
              '<input type="hidden" name="items[' + index + '][item_id]" value="' + itemId + '">' +
            '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">' + itemDescription + '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">' + unit + '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">' + quantity + '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">' +
              '₱' + unitCost.toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) +
            '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap">' +
              '<div class="relative rounded-md shadow-sm">' +
                '<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">' +
                  '<span class="text-gray-500 sm:text-sm">₱</span>' +
                '</div>' +
                '<input type="number" step="0.01" min="0" ' +
                       'name="items[' + index + '][unit_price]" ' +
                       'class="unit-price focus:ring-blue-500 focus:border-blue-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" ' +
                       'required ' +
                       'data-quantity="' + quantity + '" ' +
                       'data-index="' + index + '" ' +
                       'oninput="calculateItemTotal(this, ' + quantity + ', ' + index + ')">' +
              '</div>' +
            '</td>' +
            '<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">' +
              '₱<span id="item-total-' + index + '">0.00</span>' +
              '<input type="hidden" name="items[' + index + '][total_price]" id="item-total-input-' + index + '" value="0">' +
            '</td>';
          bidItemsTbody.appendChild(row);
        });

        document.getElementById('bidModal').classList.remove('hidden');
        console.log('Bid modal opened successfully');
      } catch (error) {
        console.error('Error in openBidForm:', error);
        showErrorModal('Error loading bid form: ' + error.message);
      }
    }

    function calculateItemTotal(input, quantity, index) {
      try {
        const unitPrice = parseFloat(input.value) || 0;
        const total = unitPrice * quantity;
        
        const totalSpan = document.getElementById('item-total-' + index);
        const totalInput = document.getElementById('item-total-input-' + index);
        
        if (totalSpan) {
          totalSpan.textContent = total.toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2});
        }
        if (totalInput) {
          totalInput.value = total.toFixed(2);
        }
        
        calculateTotalAmount();
      } catch (error) {
        console.error('Error calculating item total:', error);
      }
    }

    function calculateTotalAmount() {
      try {
        let total = 0;
        const totalInputs = document.querySelectorAll('[id^="item-total-input-"]');
        
        totalInputs.forEach(function(input) {
          total += parseFloat(input.value) || 0;
        });
        
        const totalAmountSpan = document.getElementById('totalAmount');
        const totalAmountInput = document.getElementById('totalAmountInput');
        
        if (totalAmountSpan) {
          totalAmountSpan.textContent = '₱' + total.toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2});
        }
        if (totalAmountInput) {
          totalAmountInput.value = total.toFixed(2);
        }
      } catch (error) {
        console.error('Error calculating total amount:', error);
      }
    }

    function closeBidModal() {
      try {
        document.getElementById('bidModal').classList.add('hidden');
        document.getElementById('bidItems').innerHTML = '';
        document.getElementById('bidForm').reset();
      } catch (error) {
        console.error('Error closing modal:', error);
      }
    }

    function showSuccessModal(message) {
      try {
        document.getElementById('successMessage').textContent = message;
        document.getElementById('successModal').classList.remove('hidden');
        setTimeout(closeSuccessModal, 3000);
      } catch (error) {
        console.error('Error showing success modal:', error);
      }
    }

    function closeSuccessModal() {
      try {
        document.getElementById('successModal').classList.add('hidden');
        location.reload(); // Refresh to show the new bid
      } catch (error) {
        console.error('Error closing success modal:', error);
      }
    }

    function showErrorModal(message) {
      try {
        document.getElementById('errorMessage').textContent = message;
        document.getElementById('errorModal').classList.remove('hidden');
      } catch (error) {
        console.error('Error showing error modal:', error);
      }
    }

    function closeErrorModal() {
      try {
        document.getElementById('errorModal').classList.add('hidden');
      } catch (error) {
        console.error('Error closing error modal:', error);
      }
    }

    // Initialize form submission handler
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Page loaded, setting up event listeners');
      
      const bidForm = document.getElementById('bidForm');
      if (bidForm) {
        bidForm.addEventListener('submit', async function(e) {
          e.preventDefault();
          console.log('Form submitted');
          
          try {
            const form = e.target;
            const formData = new FormData(form);
            const items = [];
            let totalAmount = 0;
            
            // Collect all items data
            const itemInputs = document.querySelectorAll('[name^="items["]');
            const itemCount = Math.floor(itemInputs.length / 3); // 3 fields per item (item_id, unit_price, total_price)
            
            console.log('Processing', itemCount, 'items');
            
            for (let i = 0; i < itemCount; i++) {
              const itemId = formData.get('items[' + i + '][item_id]');
              const unitPriceInput = document.querySelector('[name="items[' + i + '][unit_price]"]');
              const unitPrice = parseFloat(unitPriceInput ? unitPriceInput.value : 0);
              const quantity = parseFloat(unitPriceInput ? unitPriceInput.dataset.quantity : 0);
              const totalPrice = parseFloat(formData.get('items[' + i + '][total_price]') || 0);
              
              if (itemId && unitPrice > 0) {
                items.push({
                  item_id: itemId,
                  unit_price: unitPrice,
                  quantity: quantity,
                  total_price: totalPrice
                });
                
                totalAmount += totalPrice;
              }
            }
            
            if (items.length === 0) {
              showErrorModal('Please enter unit prices for at least one item');
              return;
            }
            
            const bidData = {
              bidding_id: parseInt(formData.get('bidding_id')), // Ensure numeric ID
              notes: formData.get('notes') || '',
              items: items,
              total_amount: totalAmount
            };
            
            console.log('Submitting bid data:', bidData);
            
            const response = await fetch('/supplier/bids', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(bidData),
              credentials: 'include'
            });

            const result = await response.json();
            
            if (response.ok) {
              closeBidModal();
              showSuccessModal('Bid submitted successfully!');
            } else {
              showErrorModal(result.message || 'Failed to submit bid');
            }
          } catch (error) {
            console.error('Error submitting bid:', error);
            showErrorModal('An error occurred while submitting your bid: ' + error.message);
          }
        });
      } else {
        console.error('Bid form not found');
      }

      // Debug posted requests
      try {
        // This will be populated by the server
        console.log('Page loaded successfully');
      } catch (error) {
        console.error('Error in DOMContentLoaded:', error);
      }
    });
  </script>
</body>
</html>