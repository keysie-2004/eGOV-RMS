<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Bids</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Include Supplier Sidebar -->
    <%- include('../partials/supplierSidebar') %>

    <!-- Main Content -->
    <div class="md:ml-64 p-4 md:p-8">
        <div class="w-full">
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <!-- Page Header -->
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                    <h1 class="text-2xl font-bold text-blue-700">Your Bids</h1>
                    <div class="mt-4 md:mt-0">
                        <div class="relative">
                            <input type="text" placeholder="Search bids..." class="pl-10 pr-4 py-2 border rounded-lg w-full md:w-64 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <div class="absolute left-3 top-2.5 text-gray-400">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Tabs -->
                <div class="flex flex-wrap gap-2 mb-6">
                    <a href="/supplier/bids?status=all" class="px-4 py-2 text-sm rounded-full <%= currentStatus === 'all' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                        All
                    </a>
                    <a href="/supplier/bids?status=pending" class="px-4 py-2 text-sm rounded-full <%= currentStatus === 'pending' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                        Pending
                    </a>
                    <a href="/supplier/bids?status=approved" class="px-4 py-2 text-sm rounded-full <%= currentStatus === 'approved' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                        Approved
                    </a>
                    <a href="/supplier/bids?status=declined" class="px-4 py-2 text-sm rounded-full <%= currentStatus === 'declined' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                        Declined
                    </a>
                </div>

                <!-- Bids Table -->
                <% if (bids.length > 0) { %>
                    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bid ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PR #</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% bids.forEach(bid => { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            #<%= bid.bid_id %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= bid.pr_id %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= bid.purpose.substring(0, 50) %><%= bid.purpose.length > 50 ? '...' : '' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            â‚±<%= parseFloat(bid.total_amount).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                <%= bid.status === 'approved' ? 'bg-green-100 text-green-800' : 
                                                   bid.status === 'declined' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                <%= bid.status.charAt(0).toUpperCase() + bid.status.slice(1) %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= new Date(bid.submitted_at).toLocaleDateString() %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <a href="/supplier/bids/<%= bid.bid_id %>" class="text-blue-600 hover:text-blue-900 mr-3">View</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="flex items-center justify-between mt-6">
                        <div class="text-sm text-gray-500">
                            Showing <%= startItem %> to <%= endItem %> of <%= totalItems %> bids
                        </div>
                        <div class="flex space-x-2">
                            <% if (currentPage > 1) { %>
                                <a href="/supplier/bids?status=<%= currentStatus %>&page=<%= currentPage - 1 %>" class="px-3 py-1 border rounded text-sm">
                                    Previous
                                </a>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <a href="/supplier/bids?status=<%= currentStatus %>&page=<%= i %>" class="px-3 py-1 border rounded text-sm <%= currentPage === i ? 'bg-blue-600 text-white border-blue-600' : '' %>">
                                    <%= i %>
                                </a>
                            <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                <a href="/supplier/bids?status=<%= currentStatus %>&page=<%= currentPage + 1 %>" class="px-3 py-1 border rounded text-sm">
                                    Next
                                </a>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
                        <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500">No bids found</p>
                        <p class="text-gray-400 mt-2">You haven't placed any <%= currentStatus === 'all' ? '' : currentStatus %> bids yet</p>
                        <a href="/supplier/biddings" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                            View Open Biddings
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>