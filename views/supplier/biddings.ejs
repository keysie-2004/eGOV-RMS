<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Open Biddings</title>
  <link rel="icon" href="/img/Calapan_City_Logo.png" type="image/png">
  <link href="/src/table.css" rel="stylesheet"/>
    <style>
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Include Supplier Sidebar -->
    <%- include('../partials/supplierSidebar') %>

    <!-- Main Content -->
    <div class="md:ml-64 p-4 md:p-8">
        <div class="w-full">
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <!-- Page Header -->
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                    <h1 class="text-2xl font-bold text-blue-700">Open Biddings</h1>
                    <div class="mt-4 md:mt-0">
                        <div class="relative">
                            <input type="text" placeholder="Search biddings..." class="pl-10 pr-4 py-2 border rounded-lg w-full md:w-64 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <div class="absolute left-3 top-2.5 text-gray-400">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Biddings List -->
                <% if (biddings.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% biddings.forEach(bidding => { %>
                            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden card-hover transition">
                                <div class="p-6">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h3 class="text-lg font-medium text-gray-900 mb-2">PR #<%= bidding.pr_id %></h3>
                                            <p class="text-sm text-gray-500 mb-4"><%= bidding.purpose.substring(0, 100) %><%= bidding.purpose.length > 100 ? '...' : '' %></p>
                                        </div>
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                            Open
                                        </span>
                                    </div>
                                    <div class="flex items-center justify-between mt-4">
                                        <div>
                                            <p class="text-sm text-gray-500">Estimated Budget</p>
                                            <p class="font-medium">â‚±<%= parseFloat(bidding.estimated_total).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-sm text-gray-500">Deadline</p>
                                            <p class="font-medium"><%= new Date(bidding.deadline).toLocaleDateString() %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
                                    <p class="text-sm text-gray-500">Posted by <%= bidding.posted_by_name %></p>
                                    <a href="/supplier/biddings/<%= bidding.bidding_id %>" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                                        View Details <i class="fas fa-arrow-right ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
                        <i class="fas fa-bullhorn text-4xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500">There are currently no open biddings</p>
                        <p class="text-gray-400 mt-1">Check back later for new opportunities</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>