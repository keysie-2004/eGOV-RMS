<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>My Bids - eGOV-RMS</title>
  <link href="/src/supplier.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link rel="icon" href="/img/Calapan_City_Logo.png" type="image/png"/>
  <style>
    .grid-info-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    .item-grid {
      display: grid;
      grid-template-columns: 50px 80px minmax(200px, 1fr) 80px 100px 120px;
      gap: 0.5rem;
    }
    @media (max-width: 768px) {
      .item-grid {
        grid-template-columns: 40px 60px minmax(150px, 1fr) 60px 80px 100px;
      }
    }
  </style>
</head>

<body class="bg-blue-50 font-sans">
  <!-- Include Sidebar -->
  <%- include('../partials/supplierSidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 p-4 lg:p-8">
    <div class="w-full">
      <div class="bg-white p-6 lg:p-8 rounded-lg shadow-sm">
        <!-- Page Title -->
        <h1 class="text-2xl font-bold text-blue-700 mb-6">My Bids</h1>

        <!-- Status Tabs -->
        <div class="px-6 py-4 border-b border-gray-200 mb-6">
          <div class="flex flex-wrap gap-2">
            <a href="/supplier/my-bids?status=all" 
               class="px-4 py-2 text-sm font-medium rounded-full transition-colors duration-200 <%= statusFilter === 'all' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
              All Bids
            </a>
            <a href="/supplier/my-bids?status=pending" 
               class="px-4 py-2 text-sm font-medium rounded-full transition-colors duration-200 <%= statusFilter === 'pending' ? 'bg-yellow-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
              Pending
            </a>
            <a href="/supplier/my-bids?status=closed" 
               class="px-4 py-2 text-sm font-medium rounded-full transition-colors duration-200 <%= statusFilter === 'closed' ? 'bg-gray-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
              Closed
            </a>
            <a href="/supplier/my-bids?status=awarded" 
               class="px-4 py-2 text-sm font-medium rounded-full transition-colors duration-200 <%= statusFilter === 'awarded' ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
              Awarded
            </a>
          </div>
        </div>

        <!-- Bids Section -->
        <div>
          <% if (bids && bids.length > 0) { %>
            <div class="space-y-6">
              <% bids.forEach(function(bid) { %>
                <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                  <!-- Bid Header -->
                  <div class="bg-blue-50 border-l-4 border-blue-500 px-4 py-3 mb-4 -ml-6 -mt-6 rounded-t-lg flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2">
                    <h3 class="text-lg font-bold text-blue-700">
                      Bid ID: <%= bid.bid_id %> (PR ID: <%= bid.pr_id %>)
                    </h3>
                    <span class="px-3 py-1 text-xs rounded-full <%= bid.status === 'approved' ? 'bg-green-100 text-green-800' : bid.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : bid.status === 'declined' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= bid.status.charAt(0).toUpperCase() + bid.status.slice(1) %>
                    </span>
                  </div>

                  <!-- Main Bid Info -->
                  <div class="grid-info-row gap-4 mb-6">
                    <div class="space-y-2">
                      <div>
                        <p class="text-sm font-medium text-gray-500">LGU</p>
                        <p class="font-medium"><%= bid.lgu %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Department</p>
                        <p class="font-medium"><%= bid.department %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Date Submitted</p>
                        <p class="font-medium"><%= new Date(bid.submitted_at).toLocaleDateString() %></p>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <div>
                        <p class="text-sm font-medium text-gray-500">Total Bid Amount</p>
                        <p class="font-medium text-lg">₱<%= parseFloat(bid.total_amount).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Purpose</p>
                        <p class="font-medium"><%= bid.purpose %></p>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-500">Requested By</p>
                        <p class="font-medium"><%= bid.requested_by_name || 'N/A' %></p>
                      </div>
                    </div>
                  </div>

                  <!-- Bid Items Section -->
                  <div class="mb-6">
                    <h4 class="font-medium text-gray-700 mb-3">Your Bid Items</h4>
                    <div class="overflow-x-auto">
                      <div class="min-w-[600px]">
                        <!-- Items Header -->
                        <div class="item-grid bg-gray-100 p-3 rounded-t">
                          <div class="text-sm font-medium">Item No</div>
                          <div class="text-sm font-medium">Unit</div>
                          <div class="text-sm font-medium">Description</div>
                          <div class="text-sm font-medium">Qty</div>
                          <div class="text-sm font-medium">Your Unit Price</div>
                          <div class="text-sm font-medium">Total Cost</div>
                        </div>
                        <!-- Items List -->
                        <% if (bid.items && bid.items.length > 0) { %>
                          <% bid.items.forEach(function(item) { %>
                            <div class="item-grid p-3 border-b border-gray-100">
                              <div class="text-sm"><%= item.item_no || '' %></div>
                              <div class="text-sm"><%= item.unit || 'N/A' %></div>
                              <div class="text-sm"><%= item.item_description || 'N/A' %></div>
                              <div class="text-sm"><%= item.quantity || 0 %></div>
                              <div class="text-sm">₱<%= parseFloat(item.unit_price || 0).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                              <div class="text-sm">₱<%= parseFloat(item.total_price || 0).toLocaleString('en-PH', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
                            </div>
                          <% }); %>
                        <% } else { %>
                          <div class="p-3 text-sm text-gray-500">No items found for this bid.</div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center py-12">
              <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-500 text-lg">No bids found.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <i class="fas fa-check-circle text-green-600 text-xl"></i>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Success</h3>
        <div class="mt-2 px-4 py-3">
          <p id="successMessage" class="text-sm text-gray-500"></p>
        </div>
        <div class="items-center px-4 py-3">
          <button onclick="closeSuccessModal()" class="px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div id="errorModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
          <i class="fas fa-exclamation-circle text-red-600 text-xl"></i>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Error</h3>
        <div class="mt-2 px-4 py-3">
          <p id="errorMessage" class="text-sm text-gray-500"></p>
        </div>
        <div class="items-center px-4 py-3">
          <button onclick="closeErrorModal()" class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    function showSuccessModal(message) {
      try {
        document.getElementById('successMessage').textContent = message;
        document.getElementById('successModal').classList.remove('hidden');
        setTimeout(closeSuccessModal, 3000);
      } catch (error) {
        console.error('Error showing success modal:', error);
      }
    }

    function closeSuccessModal() {
      try {
        document.getElementById('successModal').classList.add('hidden');
      } catch (error) {
        console.error('Error closing success modal:', error);
      }
    }

    function showErrorModal(message) {
      try {
        document.getElementById('errorMessage').textContent = message;
        document.getElementById('errorModal').classList.remove('hidden');
      } catch (error) {
        console.error('Error showing error modal:', error);
      }
    }

    function closeErrorModal() {
      try {
        document.getElementById('errorModal').classList.add('hidden');
      } catch (error) {
        console.error('Error closing error modal:', error);
      }
    }

    // Debug page load
    document.addEventListener('DOMContentLoaded', function() {
      console.log('My Bids page loaded');
      console.log('Supplier ID:', '<%= supplier ? supplier.supplier_id : "Not available" %>');
      console.log('Bids count:', '<%= bids.length %>');
      console.log('Filter applied:', '<%= statusFilter %>');
      <% if (bids && bids.length > 0) { %>
        console.log('Bids data:', <%- JSON.stringify(bids) %>);
      <% } %>
    });
  </script>
</body>
</html>